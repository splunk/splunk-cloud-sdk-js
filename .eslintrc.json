{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint-config-airbnb",
    "globals": {
        "__DEV__": true
    },
    "settings": {
        "import/resolver": {
            "webpack": { "config": "webpack.config.js" }
        }
    },
    "rules": {
        "import/no-extraneous-dependencies": "off",
        "indent": ["error", 2],
        "jsx-a11y/href-no-hash": "off",
        "max-len": [2, {"code": 100, "tabWidth": 2, "ignoreComments": true}]
    }
}