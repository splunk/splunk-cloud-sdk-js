{
  "compilerOptions": {
    "sourceMap": true,
    "sourceRoot": "test",
    "outDir": ".",
    "noEmit": false,
    "strict": true,
    "lib": [
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "dom"
    ]
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "types": ["node"],
  "include": [
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.d.ts",
    "test/**/*.js",
    "test/**/*.js.map"
  ]
}
